/* pages/index/index.wxss */
.indexContainer .header{
  display: flex;
  padding: 10rpx;
  background: #70D6D6;
}
.indexContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
.indexContainer .header .search{
  border: 4px solid #eee;
  border-radius: 20rpx;
  margin: 0 20rpx;
  flex: 1;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: white;
}

/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 图标导航区域 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #70D6D6;
  font-size: 50rpx;
  color: white;
  margin: 20px 0;
}

.navItem .icon-tubiaosvg-{
  font-size: 70rpx;
}
.navItem .icon-MV-wangyiicon{
  font-size: 70rpx;
}
.navItem .icon-gedan{
  font-size: 100rpx;
}
.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 20px;
}


/* 推荐内容区域 */
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对齐模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}

/* 排行榜 */
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 550rpx;
}
.scroll-y{
  height: 480rpx;
  overflow-y: scroll;
}
.swiperItem{
  width: 96%;
  background: #fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  /* 当一个元素设置为flex，其子元素会自动生成为lock元素 */
  display: flex;
  margin-bottom: 20rpx;
  box-shadow: 5rpx 6rpx 5rpx 5rpx #818585;
  border-radius: 10rpx;
  width: 94%;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}