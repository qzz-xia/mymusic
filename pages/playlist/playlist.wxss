/* pages/playlist/playlist.wxss */
.recommendSongContainer .header{
    position: relative;
    width: 100%;
    height: 550rpx;
}
.recommendSongContainer .header image{
    margin: auto;
    width: 100%;
    /* height: 800rpx; */
    /* max-width: 100%; */
}
/* 列表区域 */
.listContainer{
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #fff;
}
.listHeader{
    height: 80rpx;
    line-height: 80rpx;
}
.listHeader .changeMore{
    float: right;
}

/* 内容区 */
.listScroll{
    height: calc(100vh - 380rpx);
}
.scrollItem{
    /* 横向布局 */
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}
.scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}
.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20px;
}
.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    margin-left: 20rpx;
    max-width: 300rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollItem .iconfont{
    position: absolute;
    right: 30rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}
